extends layout

block content
    // Listing-grid-view
    section.listing-page(style='padding-top: 1%')
        .container
            ul.coustom-breadcrumb
                li
                    a(href='/', style='color: #1e96fe') Home
                li
                    a(style='color: #1e96fe') >
                li(style='color: #1e96fe') Car Parts Listing
            .row
                .col-md-9.col-md-push-3
                    .result-sorting-wrapper
                        .sorting-count
                            p  #{result.totalDocs} Car Parts.
                        // <div class="result-sorting-by">
                        // <p>Sort by:</p>
                        // <form action="#" method="post">
                        // <div class="form-group select sorting-select">
                        // <select class="form-control ">
                        // <option>Price (low to high)</option>
                        // <option>Price (high to low)</option>
                        // <option>Newest Items</option>
                        // </select>
                        // </div>
                        // </form>
                        // </div>
                    .row
                        each doc, i in result.docs
                            .col-md-4.grid_listing
                                .product-listing-m.gray-bg
                                    .product-listing-img
                                        a(href='/parts/forsale/'+doc._id)
                                            if(doc.pics[0])
                                                img.img-responsive(src="/uploads/partpics/"+doc.pics[0], alt='image')
                                            if(!doc.pics[0])
                                                img.img-responsive(src="/images/Car-Placeholder.jpg", alt='image')
                                    .product-listing-content
                                        h5
                                            a(href='/parts/forsale/'+doc._id)=doc.name
                                        p.list-price $#{doc.price}
                                        .car-location
                                            span
                                                i.fa.fa-map-marker(aria-hidden='true')
                                                |  #{doc.location}
                                        ul.features_list
                                            li
                                                i.fa.fa-calendar(aria-hidden='true')
                                                | #{doc.year}
                                            li
                                                i.fa.fa-car(aria-hidden='true')
                                                | #{doc.model}
                    .pagination
                        ul
                            - for(var i = 1; i <= result.totalPages; i++) {
                                if i == page
                                    li.current #{i}
                                if i != page
                                    li
                                        a(href="/parts/search?page="+i+"&location="+location+"&make="+make+"&model="+model+"&year="+year+"&minPrice="+minPrice+"&maxPrice="+maxPrice+"&searchType="+searchType)=i
                            -}
                // Side-Bar
                aside.col-md-3.col-md-pull-9
                    .sidebar_widget
                        .widget_heading
                            h5
                                i.fa.fa-filter(aria-hidden='true')
                                |  Find Your Car Part
                        .sidebar_filter
                            form#filtSearch(action='/parts/search', method='get')
                                .form-group.select
                                    select#location.form-control(name='location')
                                        option(value='') Select Location 
                                        option(value='Slemany') Sulaymaniyah 
                                        option(value='Halwer') Hawler
                                        option(value='Duhok') Duhok 
                                .form-group.select
                                    select#makes.form-control(name='make')
                                        option(value='') Select Brand
                                .form-group.select
                                    select#models.form-control(name='model')
                                        option(value='') Select Model
                                .form-group.select
                                    select#year.form-control(name='year')
                                        option(value='') Year of Model 
                                .form-group
                                    label.form-label Price Range ($) 
                                    input#price_range.span2(type='text', value='', data-slider-min='0', data-slider-max='100000', data-slider-step='5', data-slider-value='[0,50000]')
                                    input#minprice(type='hidden',name="minPrice",value="0")
                                    input#maxprice(type='hidden',name="maxPrice",value="50000")
                                    input(type='hidden',name="page",value="1")
                                .form-group
                                    button.btn.btn-block(type='submit')
                                        i.fa.fa-search(aria-hidden='true')
                                        |  Search
                    .sidebar_widget.sell_car_quote
                        .white-text.div_zindex.text-center
                            h3 Sell Your Car
                            a.btn(href='/car/addnewcar')
                                | Sell Your Car
                                span.angle_arrow
                                    i.fa.fa-angle-right(aria-hidden='true')
                        .dark-overlay
