extends layout

block content
    // Dealer-profile
    section.dealer_profile.inner_pages(style='padding-top: 1%')
        .container
            ul.coustom-breadcrumb
                li
                    a(href='/', style='color: #1e96fe') Home
                li
                    a(style='color: #1e96fe') >
                li(style='color: #1e96fe') Dealers Profile
            .row
                .col-md-3.col-sm-3.col-xs-4
                    .dealer_logo
                        img(src='/uploads/avatars/'+pro.avatar, alt='image')
                .col-md-6.col-sm-5.col-xs-8
                    .dealer_info
                        h4 #{pro.company}
                        p #{pro.address.city} - #{pro.address.street}
                        ul.dealer_social_links
                            if pro.socialLinks.facebook
                                li.facebook-icon
                                    a(href=pro.socialLinks.facebook)
                                        i.fa.fa-facebook-square(aria-hidden='true')
                            if pro.socialLinks.instagram
                                li.instagram-icon
                                    a(href=pro.socialLinks.instagram)
                                        i.fa.fa-instagram(aria-hidden='true')
                            if pro.socialLinks.youtube
                                li.youtube-icon
                                    a(href=pro.socialLinks.youtube)
                                        i.fa.fa-youtube(aria-hidden='true')
                            if pro.socialLinks.twitter
                                li.twitter-icon
                                    a(href=pro.socialLinks.twitter)
                                        i.fa.fa-twitter(aria-hidden='true')
                .col-md-3.col-sm-4.col-xs-12
                    if pro.website
                        .dealer_contact_info.gray-bg
                            h6
                                i.fa.fa-globe(aria-hidden='true')
                                |  Website
                            a(href=pro.website)=pro.website
                    if pro.phoneNumber
                    .dealer_contact_info.gray-bg
                        h6
                            i.fa.fa-phone(aria-hidden='true')
                            |  Phone Number
                        a(href='tel:'+pro.phoneNumber)=pro.phoneNumber
