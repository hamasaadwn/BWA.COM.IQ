    // Contact-us
    section.contact_us.section-padding.gray-bg
        .container
            .row
                .col-md-6
                    h3 Get in touch using the form below
                    .contact_form.gray-bg
                        form(action='#', method='get')
                            .form-group
                                label.control-label
                                    | Full Name 
                                    span *
                                input#fullname.form-control.white_bg(type='text')
                            .form-group
                                label.control-label
                                    | Email Address 
                                    span *
                                input#emailaddress.form-control.white_bg(type='email')
                            .form-group
                                label.control-label
                                    | Phone Number 
                                    span *
                                input#phonenumber.form-control.white_bg(type='text')
                            .form-group
                                label.control-label
                                    | Message 
                                    span *
                                textarea.form-control.white_bg(rows='4')
                            .form-group
                                button.btn(type='submit')
