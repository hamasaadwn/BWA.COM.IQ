                                    option(value='Baghdad',selected="") #{translation.CITY_BAGHDAD}
                                else
                                    option(value='Baghdad') #{translation.CITY_BAGHDAD}
                                if profile.address.city == "Mosul"
                                    option(value='Mosul',selected="") #{translation.CITY_MOSUL}
                                else
                                    option(value='Mosul') #{translation.CITY_MOSUL}
                                if profile.address.city == "Basra"
                                    option(value='Basra',selected="") #{translation.CITY_BASRA}
                                else
                                    option(value='Basra') #{translation.CITY_BASRA}
                                if profile.address.city == "Salah Al Din"
                                    option(value='Salah Al Din',selected="") #{translation.CITY_SALAH_AL_DIN}
                                else
                                    option(value='Salah Al Din') #{translation.CITY_SALAH_AL_DIN}
                                if profile.address.city == "Diyala"
                                    option(value='Diyala',selected="") #{translation.CITY_DIYALA}
                                else
                                    option(value='Diyala') #{translation.CITY_DIYALA}
                                if profile.address.city == "Wasit"
                                    option(value='Wasit',selected="") #{translation.CITY_WASIT}
                                else
                                    option(value='Wasit') #{translation.CITY_WASIT}
                                if profile.address.city == "Maysan"
                                    option(value='Maysan',selected="") #{translation.CITY_MAYSAN}
                                else
