                                    option(value='Najaf') #{translation.CITY_NAJAF}
                                if profile.address.city == "Al Anbar"
                                    option(value='Al Anbar',selected="") #{translation.CITY_AL_ANBAR}
                                else
                                    option(value='Al Anbar') #{translation.CITY_AL_ANBAR}
                                
                                
                        .form-group
                            label.control-label #{translation.STREET}
                            input#street.form-control.white_bg(type='text', name='street',value=profile.address.street,required='')
                        .form-group
                            label.control-label #{translation.WEBSITE}
                            input#website.form-control.white_bg(type='text', name='website',value=profile.website)
                        .gray-bg.field-title
                            h6 #{translation.SOCIAL_LINKS}
                        .form-group
                            label.control-label #{translation.FACEBOOK_LINKS}
                            input#facebook.form-control.white_bg(type='text', name='facebook', value=profile.socialLinks.facebook)
                        .form-group
                            label.control-label #{translation.INSTAGRAM_LINK}
                            input#instagram.form-control.white_bg(type='text', name='instagram', value=profile.socialLinks.instagram)
                        .form-group
                            label.control-label #{translation.YOUTUBE_LINK}
                            input#youtube.form-control.white_bg(type='text', name='youtube', value=profile.socialLinks.youtube)
                        .form-group
                            label.control-label #{translation.TWITTER_LINK}
                            input#twitter.form-control.white_bg(type='text', name='twitter', value=profile.socialLinks.twitter)
                        .form-group
                            label.control-label #{translation.INFO}
                            textarea.form-control(name="info")=profile.info
                        .form-group
                            button.btn(type='submit')
                                | #{translation.SAVE}
                                span.angle_arrow
                                    i.fa.fa-angle-right(aria-hidden='true')
                    a(href="/profile/changelogo") #{translation.CHANGE_LOGO}
            // /Profile-setting

    else if profile && profile.state == "req"
        .container
            br
            .user_profile_info.gray-bg.padding_4x4_40
                .dealer_info
                    h5 #{translation.YOU_HAVE_REQUESTED_A_PROFILE}
                    h5 #{translation.PLEASE_WAIT}

    else
        .container
            br
            .user_profile_info.gray-bg.padding_4x4_40
                .dealer_info
                    h5 #{translation.YOU_DONT_HAVE_A_PROFILE}
                    a.button.is-primary(href="/profile/createprofile") #{translation.PLEASE_CLICK_HERE}
    .container
        .user_profile_info.padding_4x4_40
            a(href="/auth/changepassword") #{translation.CHANGE_PASSWORD}
            br

    script(src='/js/jquery.min.js')
