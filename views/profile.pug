        .row
            .col-md-3.col-sm-3
                .profile_nav
                    ul
                        li.active
                            a(href='/profile/myprofile') #{translation.PROFILE_SETTING}
                        li
                            a(href='/profile/myvehicles') #{translation.MY_VEHICLES}
                        li
                            a(href='/parts/myvehicleparts') #{translation.MY_VEHICLE_PARTS}
                        li
                            a(href='/car/addnewcar') #{translation.POST_A_VEHICLE}
                        li
                            a(href='/parts/addCarPart') #{translation.POST_A_VEHICLE_PART}
                        li
                            a(href='/auth/logout') #{translation.SIGN_OUT}
            .col-md-6.col-sm-8
                .profile_wrap
                    h5.uppercase.underline #{translation.EDIT_PROFILE}
                    form(action='/profile/createprofile',method="post")
                        .form-group
                            label.control-label #{translation.COMPANY_NAME}
                            input#company.form-control.white_bg(type='text', name='company', value=profile.company,required='')
                        .form-group
                            label.control-label #{translation.YOUR_NAME}
                            input#name.form-control.white_bg(type='text', name='name', value=profile.name,required='')
                        .form-group
                            label.control-label #{translation.PHONE_NUMBER}
                            input#phone-number.form-control.white_bg(type='text', name='phoneNumber', value=profile.phoneNumber,required='')
                        .form-group
                            label.control-label #{translation.CITY}
                            select.selection(style='width: 100%; padding: 15px; border-color: #dbdbdb',name='city')
                                if profile.address.city == "Hawler"
                                    option(value='Hawler',selected="") #{translation.CITY_HAWLER}
                                else
                                    option(value='Hawler') #{translation.CITY_HAWLER}
                                if profile.address.city == "Slemany"
                                    option(value='Slemany',selected="") #{translation.CITY_SLEMANY}
                                else
                                    option(value='Slemany') #{translation.CITY_SLEMANY}
                                if profile.address.city == "Duhok"
                                    option(value='Duhok',selected="") #{translation.CITY_DUHOK}
                                else
                                    option(value='Duhok') #{translation.CITY_DUHOK}
