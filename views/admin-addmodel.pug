extends layout

block content  
    
	// /Header
	// Page Header
	section.page-header.profile_page
		.container
			.page-header_wrap
				.page-heading
					h1 Add New Car Model
				ul.coustom-breadcrumb
					li
						a(href='/') Home
					li Add New Car Model
		// Dark Overlay
		.dark-overlay
	section.user_profile.inner_pages
		.container
			form#postModel(action='/admin/addmodel', method='post')
				.form-group
					label.control-label Make
					.select
						select#makes.form-control.white_bg(name='make',required="required")
							option(selected='selected',value='') choose a make
				.form-group
					label.control-label Modle Name
					input#modelName.form-control.white_bg(type='text',name='modelName',placeholder="model name",required="required")
				.form-group
					button.btn(style='width: 40%;', type='submit')
						| Add Model 
			ul.list-group#models
			//- 	each make, i in makes
			//- 		li.list-group-item= make.makeName
	script(src='/js/jquery.min.js')
	script(src='/js/ajax/admin-addmodel.js')