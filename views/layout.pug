        // /Login-Form

        // Register-Form
        #signupform.modal.fade
            .modal-dialog(role='document')
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                            span(aria-hidden='true') ×
                        h3.modal-title Sign Up 
                    .modal-body
                        .row
                            .signup_wrap
                                .col-md-6.col-sm-6
                                    form(action='/auth/register', method='post')
                                        .form-group
                                            input.form-control(type='text', name='name',placeholder='Full Name',required='')
                                        .form-group
                                            input.form-control(type='email',id="get-email",name='email', placeholder='Email Address',required='')
