                        li
                            a(href='/dealers') Dealers
                        li
                            a(href="/list?page=1&l=New") New Cars
                        li
                            a(href="/list?page=1&l=Used") Used Cars
                        li
                            a(href='/parts/list') Car Parts
                        li
                            a(href='/about-us') About us
