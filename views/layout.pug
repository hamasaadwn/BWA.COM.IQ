    body
        // Header
        header
            .default-header
                .container
                    .row
                        .col-sm-3.col-md-2
                            .logo
                                a(href='/')
                                img(src='/images/logo.png', alt='image')
                        .col-sm-9.col-md-10
                            .header_info
                                .header_widgets
                                    .circle_icon
                                        i.fa.fa-envelope(aria-hidden='true')
                                    p.uppercase_text Mail us : 
                                    a(href='mailto:info@bwa.com.iq') info@bwa.com.iq
                                .header_widgets
                                    .circle_icon
                                        i.fa.fa-phone(aria-hidden='true')
                                    p.uppercase_text Call Us: 
                                    a(href='tel:+964 770 152 7381') +964 770 152 7381
                                .social-follow
                                    ul
                                        li
                                            a(href='#')
                                                i.fa.fa-facebook-square(aria-hidden='true')
                                        li
                                            a(href='#')
                                                i.fa.fa-instagram(aria-hidden='true')
                                if user == null || user == undifiended || user ==""
                                    .login_btn
                                        a.btn.btn-xs.uppercase(href='#loginform', data-toggle='modal', data-dismiss='modal') Login
                                        span 
                                        a.btn.btn-xs.uppercase(href='#signupform', data-toggle='modal', data-dismiss='modal') Register

        != messages('message', locals)
        if errors
            each error, i in errors
                div.alert.alert-danger(role="alert") #{error.msg}
        // Navigation
        nav#navigation_bar.navbar.navbar-default
            .container
                .navbar-header
                    button#menu_slide.navbar-toggle.collapsed(data-target='#navigation', aria-expanded='false', data-toggle='collapse', type='button')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                .header_wrap
                    if user
                        .user_login
                            ul
                                li.dropdown
                                    a(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                                        i.fa.fa-user-circle(aria-hidden='true')
                                        |  #{user.name}
                                        i.fa.fa-angle-down(aria-hidden='true')
                                    ul.dropdown-menu
                                        li
                                            a(href='/profile/myprofile') Profile Settings
                                        hr
                                        if user.role=='admin'
                                            li
                                                a(href='/admin/users') Users
                                            li
                                                a(href='/admin/Dealers') Dealers 
                                            li
                                                a(href='/admin/requests') Requests
                                            hr
                                        li
                                            a(href='/profile/myvehicles') My Vehicles
                                        li
                                            a(href='/parts/myvehicleparts') My Vehicle Parts
                                        li
                                            a(href='/car/addnewcar') Post a Vehicle
                                        li
                                            a(href='/parts/addCarPart') Post a Vehicle Part
                                        li
                                            a(href='/auth/logout') Sign Out
                    //- .header_search
